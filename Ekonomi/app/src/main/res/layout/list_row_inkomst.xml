<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dip" >

    <TextView
        android:id="@+id/list_row_tv_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_tv_titel"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_centerVertical="true"
    />

    <TextView
        android:id="@+id/list_row_textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_row_tv_kategori"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="@string/list_tv_date"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_row_textViewSek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingRight="15dip"
        android:text="@string/list_tv_belopp"
        android:textColor="#00C000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/list_row_tv_kategori"
        android:layout_alignParentEnd="true" />

</RelativeLayout>